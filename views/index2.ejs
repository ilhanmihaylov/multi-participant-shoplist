<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Shop <%= shop_name %></title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="/assets/img/favicon.png" rel="icon">
  <link href="/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.gstatic.com" rel="preconnect">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">


  <!-- Template Main CSS File -->
  <link href="/assets/css/style.css" rel="stylesheet">

</head>

<body class="toggle-sidebar">

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
      <a class="logo d-flex align-items-center">
        <img src="/assets/img/logo.png" alt="">
        <span class="d-none d-lg-block">NiceAdmin</span>
      </a>
    </div><!-- End Logo -->


    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">

        <li class="nav-item dropdown pe-3">

          <a class="nav-link nav-profile d-flex align-items-center pe-0">
            <img src="/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
            <span class="d-none d-md-block ps-2"><%= participant_name %></span>
          </a><!-- End Profile Iamge Icon -->

          
        </li><!-- End Profile Nav -->

      </ul>
    </nav><!-- End Icons Navigation -->

  </header><!-- End Header -->



  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Shop <%= shop_name %></h1>
      <div class="col-sm-3">
        <input type="text" autocomplete="off" id="add-product-name">
        <button type="button" class="btn btn-primary" onclick="add_product();"><i class="bi bi-plus"></i></button>
      </div>
    </div><!-- End Page Title -->
    

    <section class="section">
      <div class="row">
        
        <% products.forEach(function(product){ %>
          
        
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %>
                <% if (product.complete) { %>
                  <span class="badge bg-success text-light"><i class="bi bi-bag-check"></i> Done</span>
                <% } %>
                <% if (product.you_buy) { %>
                  <span class="badge bg-warning text-dark"><i class="bi bi-person-badge"></i> You Buy / From: <%= product.you_buy_initiator_id %></span>  
                <% } %>
              </h5>
              <button type="button" class="btn btn-primary" onclick="do_action('<%= product._id %>', 'cart');"><i class="bi bi-handbag"></i> Cart / OK</button>
              <button type="button" class="btn btn-warning" onclick="do_action('<%= product._id %>', 'you-buy');"><i class="bi bi-person"></i> You Buy</button>
              <button type="button" class="btn btn-danger" onclick="do_action('<%= product._id %>', 'trash');"><i class="bi bi-trash"></i></button>
            </div>
          </div>
        </div>
        <% }); %>

      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">
    <div class="copyright">
      &copy; Copyright <strong><span>NiceAdmin</span></strong>. All Rights Reserved
    </div>
    <div class="credits">
      <!-- All the links in the footer should remain intact. -->
      <!-- You can delete the links only if you purchased the pro version. -->
      <!-- Licensing information: https://bootstrapmade.com/license/ -->
      <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
      Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
    </div>
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <script src="/assets/vendor/tinymce/tinymce.min.js"></script>
  <script src="https://cdn.socket.io/4.5.1/socket.io.js"></script>
  <!-- Template Main JS File -->
  <script src="/assets/js/main.js"></script>
  
  

</body>

</html>